# Security-hardened Caddyfile for POSSE API
# Listen on HTTP only - Cloudflare Tunnel handles HTTPS

:80 {
    # Disable admin API in production
    admin off

    # Block path traversal and suspicious patterns first
    @blocked {
        path_regexp suspicious .*(\.\.|%2e%2e|%252e|%00|%0a|%0d).*
    }
    handle @blocked {
        respond "Forbidden" 403
    }

    # Allow GET requests to /api/interactions/{post_id}
    @allowed_get {
        method GET
        path /api/interactions/*
    }

    # Allow OPTIONS for CORS preflight requests
    @allowed_options {
        method OPTIONS
        path /api/interactions/*
    }

    # Security headers applied to all responses
    header {
        # Prevent clickjacking
        X-Frame-Options "DENY"
        # Prevent content-type sniffing
        X-Content-Type-Options "nosniff"
        # Enable XSS protection
        X-XSS-Protection "1; mode=block"
        # Strict referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Content Security Policy - restrictive for API
        Content-Security-Policy "default-src 'none'; frame-ancestors 'none'"
        # Remove server identification header
        -Server
        # Note: CORS headers are handled by the backend (posse)
    }

    # Handle CORS preflight OPTIONS requests - proxy to backend
    handle @allowed_options {
        reverse_proxy ghost-posse:5000
    }

    # Handle allowed GET requests
    handle @allowed_get {
        reverse_proxy ghost-posse:5000 {
            # Forward real client IP to backend
            header_up X-Real-IP {header.Cf-Connecting-Ip}
            header_up X-Forwarded-For {header.Cf-Connecting-Ip}
            header_up X-Forwarded-Proto {scheme}
            # Ensure backend receives canonical Host header
            header_up Host {host}
        }
    }

    # Deny all other requests
    handle {
        respond "Not found" 404
    }

    # Access logging for security monitoring
    log {
        output stdout
        format json
        level INFO
    }
}
