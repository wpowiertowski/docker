# Mastodon Configuration Template
# Copy this to .env and fill in your values

# Domain configuration
LOCAL_DOMAIN=your-mastodon-domain.com

# Database password
DB_PASSWORD=your_secure_database_password

# Mastodon secrets (generate with: docker run --rm -it tootsuite/mastodon:latest bundle exec rake secret)
SECRET_KEY_BASE=your_secret_key_base_here
OTP_SECRET=your_otp_secret_here

# VAPID keys (generate with: docker run --rm -it tootsuite/mastodon:latest bundle exec rake mastodon:webpush:generate_vapid_key)
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_PUBLIC_KEY=your_vapid_public_key_here

# Cloudflare Tunnel Token
# Get this from: https://one.dash.cloudflare.com/
TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
